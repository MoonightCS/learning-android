<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:src="@drawable/event_icon"
        android:contentDescription="@string/event_image_view" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_view"
        android:layout_toRightOf="@id/image_view"
        android:paddingTop="@dimen/info_top_padding"
        tools:text="Event Title" />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text_view"
        android:layout_toEndOf="@id/image_view"
        android:layout_toRightOf="@id/image_view"
        tools:text="Description" />

    <TextView
        android:id="@+id/dtstart_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_text_view"
        android:layout_toEndOf="@id/image_view"
        android:layout_toRightOf="@id/image_view"
        tools:text="Date start time" />

    <TextView
        android:id="@+id/dtend_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dtstart_text_view"
        android:layout_toEndOf="@id/image_view"
        android:layout_toRightOf="@id/image_view"
        tools:text="Date end time" />


</RelativeLayout>