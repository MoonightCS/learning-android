<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="vertical"
    tools:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/repo_index"
            android:layout_width="@dimen/index_view_size"
            android:layout_height="@dimen/index_view_size"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/icon_margin"
            android:gravity="center"
            android:textAppearance="@style/ListTitle"
            tools:text="1" />

        <TextView
            android:id="@+id/repo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/icon_margin"
            android:layout_toEndOf="@id/repo_index"
            android:lines="1"
            android:textAppearance="@style/ListTitle"
            tools:text="learning-android" />

        <TextView
            android:id="@+id/repo_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/repo_name"
            android:layout_toEndOf="@id/repo_index"
            android:lines="1"
            android:textAppearance="@style/ListSubtitle"
            tools:text="size = 1285" />


    </RelativeLayout>

</android.support.v7.widget.CardView>