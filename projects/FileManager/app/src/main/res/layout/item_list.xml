<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_elem_icon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_margin="@dimen/icon_margin"
        android:src="@drawable/folder_icon" />

    <TextView
        android:id="@+id/elem_dir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_elem_icon"
        android:layout_toEndOf="@id/list_elem_icon"
        android:layout_toRightOf="@id/list_elem_icon"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="@string/test_text" />

    <TextView
        android:id="@+id/additional_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/elem_dir"
        android:layout_toEndOf="@id/list_elem_icon"
        android:layout_toRightOf="@id/list_elem_icon"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        tools:text="size : 48tb" />

</RelativeLayout>